# ISX Pulse Production Configuration
# Copy this file to .env.production and fill in your actual values
# NEVER commit the actual .env.production file to version control

# Google Apps Script Configuration
APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec
APPS_SCRIPT_SECRET=your-secret-key-here

# Feature Flags
ENABLE_SCRATCH_CARD_MODE=true
ENABLE_DEVICE_FINGERPRINT=true

# Security Settings
ENABLE_SECURE_MODE=true
REQUIRE_SIGNATURE=true
ENABLE_ENCRYPTION=false
ALLOW_INSECURE_FOR_TEST=false

# License System Settings
MAX_LICENSE_ATTEMPTS=5
LICENSE_BLOCK_DURATION=15
LICENSE_WINDOW_DURATION=60

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Database (if applicable)
# DATABASE_URL=your-database-url-here

# External APIs
# ISX_API_URL=https://www.isx-iq.net
# ISX_API_TIMEOUT=30s