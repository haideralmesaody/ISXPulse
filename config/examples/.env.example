# ISX Daily Reports Scrapper Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENV=development

# Logging
ISX_LOGGING_OUTPUT=console
LOG_LEVEL=info

# License Configuration
LICENSE_CHECK_INTERVAL=1h
LICENSE_GRACE_PERIOD=7d

# Google Sheets API
# Note: For production, use encrypted_credentials.dat instead
GOOGLE_APPLICATION_CREDENTIALS=
SHEETS_ID=

# Security
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=
JWT_SECRET=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h

# WebSocket Configuration
WS_PING_INTERVAL=30s
WS_PONG_TIMEOUT=10s
WS_MAX_CONNECTIONS=100

# File Storage Paths
DATA_DIR=./data
DOWNLOADS_DIR=./data/downloads
REPORTS_DIR=./data/reports
CACHE_DIR=./data/cache

# Performance
MAX_WORKERS=10
BATCH_SIZE=100
TIMEOUT=30s

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# External APIs
ISX_API_URL=
ISX_API_TIMEOUT=30s
ISX_API_RETRY_COUNT=3

# Development Only
DEBUG=false
SKIP_LICENSE_CHECK=false

# MCP Server Configuration
# GitHub MCP - Create a Personal Access Token at https://github.com/settings/tokens
GITHUB_TOKEN=

# Sentry MCP - Get from https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# ==================================================
# Scratch Card License System Configuration
# ==================================================

# Google Apps Script Configuration
# Deploy the ISX License Manager as a web app and add the URL here
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# Scratch Card Features
ENABLE_SCRATCH_CARD_MODE=true
ENABLE_DEVICE_FINGERPRINTING=true
ENABLE_ONE_TIME_ACTIVATION=true

# Fingerprinting Configuration
FINGERPRINT_CACHE_TTL=1h
FINGERPRINT_INCLUDE_MAC=true
FINGERPRINT_INCLUDE_CPU=true
FINGERPRINT_INCLUDE_HOSTNAME=true

# Security & Rate Limiting for Scratch Cards
SCRATCH_CARD_MAX_ATTEMPTS_PER_HOUR=10
SCRATCH_CARD_BLOCK_DURATION_HOURS=24
SCRATCH_CARD_RATE_LIMIT_PER_IP=10
SCRATCH_CARD_VALIDATION_TIMEOUT=30s

# License Generator Configuration
LICENSE_GENERATOR_BATCH_SIZE=100
LICENSE_GENERATOR_FORMAT=ISX-XXXX-XXXX-XXXX
LICENSE_GENERATOR_ALPHABET=ABCDEFGHIJKLMNPQRSTUVWXYZ23456789  # No confusing chars
LICENSE_GENERATOR_DEFAULT_DURATION=1m

# Apps Script Integration
APPS_SCRIPT_TIMEOUT=30s
APPS_SCRIPT_RETRY_COUNT=3
APPS_SCRIPT_RETRY_BACKOFF=2s

# Validation & Caching
VALIDATION_CACHE_ENABLED=true
VALIDATION_CACHE_TTL=5m
VALIDATION_CACHE_SIZE=1000
OFFLINE_VALIDATION_GRACE_PERIOD=24h

# Blacklist & Security
BLACKLIST_CHECK_ENABLED=true
BLACKLIST_AUTO_BAN_THRESHOLD=10
BLACKLIST_IP_TRACKING=true
BLACKLIST_DEVICE_TRACKING=true

# Audit & Monitoring
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_MAX_ENTRIES=10000
ACTIVATION_METRICS_ENABLED=true

# Development & Testing
SCRATCH_CARD_TEST_MODE=false
SCRATCH_CARD_GENERATE_TEST_CODES=false
SCRATCH_CARD_SKIP_DEVICE_CHECK=false